<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.so.debelzaak.evolution.libertar.SetupActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/branco"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="170dp"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/branco"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_height="170dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/lt_backg"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imgImagebtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_upload_pic"
        android:scaleType="centerCrop" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setupImagebtn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_margin="2dp"
        android:scaleType="centerCrop" />

            <EditText
                android:id="@+id/setupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:layout_margin="20dp"
                android:background="@drawable/input_outline"
                android:hint="Nome de usuÃ¡rio"
                android:padding="16dp"
                android:maxLength="17"
                android:inputType="textNoSuggestions"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                android:layout_marginRight="5dp"
                android:textColor="@color/deep_purple_800"
                android:textColorHint="@color/deep_purple_800" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/finishbtn"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:background="@drawable/btn_backg"/>

    </LinearLayout>
</RelativeLayout>
