<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.so.debelzaak.evolution.libertar.Pendente">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/gh"
        android:fontFamily="@font/gelalya"
        android:gravity="center"
        android:textAllCaps="false"
        android:clickable="false"
        android:textSize="23sp"
        android:text="PENDÃŠNCIAS"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/branco"
        android:layout_below="@+id/gh"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="170dp"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/branco"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_height="170dp"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/lt_backg"
        android:layout_below="@+id/gh"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="?android:actionBarSize"
                    android:src="@drawable/ic_info"
                    android:onClick="ifse"
                    android:padding="12dp"
                    android:layout_centerInParent="true"
                    android:layout_height="?android:actionBarSize" />

            </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/blog_list"
        android:layout_weight="1"
        tools:listitem="@layout/blog_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:scrollbars="none" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
