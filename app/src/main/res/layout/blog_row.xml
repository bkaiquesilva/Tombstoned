<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/butc"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <ImageView
            android:id="@+id/post_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layty"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:layout_width="match_parent"
                layout="@layout/include_no_item"
                android:layout_height="match_parent"/>
        </LinearLayout>

            <ImageView
                android:layout_width="35dp"
                android:id="@+id/deletr"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:background="@drawable/quee"
                android:layout_height="35dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/post_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="..."
            android:textAllCaps="false"
            android:textColor="#7535AD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:maxLines="2"
            android:lines="2"
            android:ellipsize="end"
            android:text="......" />

        <TextView
            android:id="@+id/post_textk"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/post_like"
                android:layout_width="32dp"
                android:padding="2dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_yes_heart_colored" />

            <TextView
                android:id="@+id/contslikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="..."
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/post_coment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="2dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_comment" />

            <ImageButton
                android:id="@+id/post_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="2dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_share" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>