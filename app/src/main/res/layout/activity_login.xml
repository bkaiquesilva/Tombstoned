<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.so.debelzaak.evolution.libertar.Logn">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/diaed"
            android:id="@+id/toolbar"
            android:textStyle="bold"
            android:fontFamily="@font/gelalya"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:minHeight="90dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/branco"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="170dp"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/branco"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_height="170dp"
        android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/lt_backg"
                android:layout_below="@+id/toolbar"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:id="@+id/email"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Seu e-mail"
                    android:textColor="#606060"
                    android:padding="20dp"
                    android:textSize="15sp"
                    android:textColorHint="#606060"
                    android:inputType="text|textNoSuggestions"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/password"
                    android:layout_marginStart="20dp"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:hint="Senha"
                    android:textColor="#606060"
                    android:padding="20dp"
                    android:textColorHint="#606060"
                    android:inputType="textPassword|textNoSuggestions"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RELEMBRE-ME"
                    android:id="@+id/checkbox"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="25dp"
                    android:id="@+id/signin"
                    android:src="@drawable/ic_arrow_forward_black_24dp"
                    android:background="@drawable/btn_backg"/>

            </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:text="NÃ£o tenho uma conta"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/signup"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/signup"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_backg"
        android:text="CRIAR"
        android:textColor="@android:color/white" />

</RelativeLayout>
